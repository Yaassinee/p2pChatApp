<!DOCTYPE html>
<html>
<head>
  <title>Chat Application</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div id="login-container">
    <h1>Login</h1>
    <form id="login-form">
      <input type="text" id="login-username" placeholder="Username" required>
      <input type="password" id="login-password" placeholder="Password" required>
      <button type="submit">Login</button>
    </form>
    <p>Don't have an account? <a href="#" id="show-register">Register here</a></p>
  </div>

  <div id="register-container" style="display: none;">
    <h1>Register</h1>
    <form id="register-form">
      <input type="text" id="register-username" placeholder="Username" required>
      <input type="password" id="register-password" placeholder="Password" required>
      <button type="submit">Register</button>
    </form>
    <p>Already have an account? <a href="#" id="show-login">Login here</a></p>
  </div>

  <div id="chat-container" style="display: none;">
    <div id="sidebar">
      <h2>Chat</h2>
      <div id="username-display"></div>
      <button id="disconnect">Disconnect</button>
      <div id="rooms-container"></div>
      <input type="text" id="room-name" placeholder="Room Name">
      <button id="create-room">Create Room</button>
      <input type="text" id="room-key" placeholder="Room Key">
      <button id="join-room">Join Room</button>
      <div id="created-room-info" style="display: none;">
        <p>Room Name: <span id="created-room-name"></span></p>
        <p>Room Key: <span id="created-room-key"></span></p>
      </div>
    </div>
    <div id="main-chat">
      <div id="chat-header">Room: <span id="chat-room-name"></span></div>
      <div id="messages"></div>
      <input type="text" id="message" placeholder="Message">
      <button id="send-message">Send</button>
      <div id="online-users"></div>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script type="module" src="/js/main.js"></script>
</body>
</html>


